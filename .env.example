# MealSync API - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# SQLite database URL (default for development)
DATABASE_URL="file:./prisma/dev.db"

# API Security
# API Key for authenticating requests from the frontend
# This key should be shared with the frontend team
API_KEY=your-api-key-here

# Optional: Base URL for testing scripts
BASE_URL=http://localhost:3000

# CORS Configuration
# Frontend origin URL (use "*" for development, specific URL for production)
CORS_ORIGIN=*

# Rate Limiting
# Maximum number of requests per IP per window (default: 100 requests per 15 minutes)
RATE_LIMIT_MAX=100

# Logging
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
