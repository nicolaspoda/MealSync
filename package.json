{
  "name": "mealsync",
  "version": "1.0.0",
  "description": "Plateforme de gestion des repas et de l'alimentation orientée nutrition et sport. MealSync permet aux utilisateurs de créer et gérer des plats et recettes, consulter les informations nutritionnelles (calories, macro-nutriments), filtrer par ingrédients et trouver des idées de repas en fonction du temps disponible pour cuisiner.",
  "main": "build/src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "ts-node prisma/seed.ts",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "prisma generate && tsoa spec-and-routes && tsc && cp -r src/generated/ build/src/generated/ && prisma migrate",
    "start": "node build/src/server.js",
    "prism:mock": "prism mock ./build/swagger.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolaspoda/MealSync.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nicolaspoda/MealSync/issues"
  },
  "homepage": "https://github.com/nicolaspoda/MealSync#readme",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^6.18.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^5.14.2",
    "@types/express": "^5.0.4",
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
